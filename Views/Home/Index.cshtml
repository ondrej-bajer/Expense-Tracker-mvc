@{
    ViewData["Title"] = "Home Page";
}

<h1 class="mb-3">Home</h1>

<div class="row g-3 mb-4">
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <div class="text-muted">Balance (this month)</div>
                <div class="fs-4 fw-semibold @(Model.BalanceThisMonth < 0 ? "text-danger" : "text-success")">
                    @Model.BalanceThisMonth.ToString("F1")
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <div class="text-muted">Total income (this month)</div>
                <div class="fs-4 fw-semibold">
                    @Model.TotalIncomeThisMonth.ToString("F1")
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <div class="text-muted">Total expense (this month)</div>
                <div class="fs-4 fw-semibold">
                    @Model.TotalExpenseThisMonth.ToString("F1")
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <div class="text-muted">Top category (this month)</div>
                <div class="fs-5 fw-semibold">
                    @Model.TopCategoryThisMonth
                </div>
            </div>
        </div>
    </div>
</div>

<div class="d-flex justify-content-between align-items-center mb-2">
    <h2 class="h5 mb-0">Last 5 transactions</h2>
    <a class="btn btn-sm btn-outline-secondary" asp-controller="Transactions" asp-action="Index">View all</a>
</div>

@if (Model.Last5Transactions == null || Model.Last5Transactions.Count == 0)
{
    <div class="alert alert-info">
        No transactions yet. Add your first one in <a asp-controller="Transactions" asp-action="Create">Transactions</a>.
    </div>
}
else
{
    <table class="table table-hover align-middle">
        <thead>
            <tr>
                <th>Date</th>
                <th>Type</th>
                <th>Category</th>
                <th class="text-end">Amount</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var t in Model.Last5Transactions)
            {
                <tr>
                    <td>@t.Date.ToString("dd.MM.yyyy")</td>
                    <td>@t.Type</td>
                    <td>@(t.Category?.Name ?? "-")</td>
                    <td class="text-end">@t.Amount.ToString("F1")</td>
                </tr>
            }
        </tbody>
    </table>
}