@model Expense_Tracker_mvc.ViewModels.TransactionsIndexVm
@using Expense_Tracker_mvc.Models.Enums

@{
    ViewData["Title"] = "Index";
}

<h1 class="h5 mb-3"><i class="bi bi-arrow-left-right"></i> Transactions</h1>

<div class="d-flex justify-content-between align-items-center mb-3">
    <div class="d-flex gap-2">
        <a class="btn btn-primary" asp-action="Create">
            <i class="bi bi-plus-lg me-1"></i>
            Add transaction
        </a>

        <button class="btn btn-outline-secondary"
                type="button"
                data-bs-toggle="collapse"
                data-bs-target="#filtersPanel"
                aria-expanded="false"
                disabled="@(Model.Items == null || Model.Items.Count == 0)"
                aria-controls="filtersPanel">

            <i class="bi bi-funnel me-1"></i>
            Filters
        </button>

        <div class="dropdown">
            <button class="btn btn-outline-secondary dropdown-toggle"
                    type="button"
                    data-bs-toggle="dropdown"
                    aria-expanded="false">
                <i class="bi bi-download me-1"></i>
                Export
            </button>

            <ul class="dropdown-menu">
                <li>
                    <a class="dropdown-item"
                       asp-action="ExportCsv"
                       asp-route-Type="@Model.Type"
                       asp-route-CategoryId="@Model.CategoryId"
                       asp-route-From="@Model.From"
                       asp-route-To="@Model.To"
                       asp-route-AmountMin="@Model.AmountMin"
                       asp-route-AmountMax="@Model.AmountMax"
                       asp-route-Search="@Model.Search">
                        CSV
                    </a>
                </li>
                <li>
                    <a class="dropdown-item"
                       asp-action="ExportPdf"
                       asp-route-Type="@Model.Type"
                       asp-route-CategoryId="@Model.CategoryId"
                       asp-route-From="@Model.From"
                       asp-route-To="@Model.To"
                       asp-route-AmountMin="@Model.AmountMin"
                       asp-route-AmountMax="@Model.AmountMax"
                       asp-route-Search="@Model.Search"
                       target="_blank">
                        PDF
                    </a>
                </li>
            </ul>
        </div>
        <div class="dropdown">
            <button class="btn btn-outline-secondary dropdown-toggle"
                    type="button"
                    data-bs-toggle="dropdown">
                <i class="bi bi-upload me-1"></i>
                Import
            </button>

            <div class="dropdown-menu p-3" style="min-width: 300px;">
                <form asp-action="ImportCsv" method="post" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()

                    <div class="mb-2">
                        <input type="file" name="file" accept=".csv" class="form-control form-control-sm" />
                    </div>

                    <button type="submit" class="btn btn-primary btn-sm w-100">
                        Import CSV
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>


<div class="collapse mb-3" id="filtersPanel">
    <div class="card">
        <div class="card-body p-2 rounded-4 shadow-sm">
            <form method="get" class="row g-2 mb-3">
                <div class="col-md-2">
                    <label class="form-label">Type</label>
                    <select class="form-select" name="Type">
                        <option value="">-- All --</option>
                        @foreach (var t in Model.Types)
                        {
                            <option value="@t.Value" selected="@t.Selected">@t.Text</option>
                        }
                    </select>
                </div>

                <div class="col-md-3">
                    <label class="form-label">Category</label>
                    <select class="form-select" name="CategoryId">
                        <option value="">-- All --</option>
                        @foreach (var c in Model.Categories)
                        {
                            <option value="@c.Value" selected="@c.Selected">@c.Text</option>
                        }
                    </select>
                </div>

                <div class="col-md-2">
                    <label class="form-label">From</label>
                    <input type="date" class="form-control" name="From"
                           value="@(Model.From?.ToString("yyyy-MM-dd"))" />
                </div>

                <div class="col-md-2">
                    <label class="form-label">To</label>
                    <input type="date" class="form-control" name="To"
                           value="@(Model.To?.ToString("yyyy-MM-dd"))" />
                </div>

                <div class="col-md-3">
                    <label class="form-label">Search</label>
                    <input class="form-control" name="Search" value="@Model.Search" placeholder="Description or category..." />
                </div>

                <div class="col-md-2">
                    <label class="form-label">Min</label>
                    <input type="number" step="0.01" class="form-control" name="AmountMin" value="@(Model.AmountMin?.ToString() ?? "")" />
                </div>

                <div class="col-md-2">
                    <label class="form-label">Max</label>
                    <input type="number" step="0.01" class="form-control" name="AmountMax" value="@(Model.AmountMax?.ToString() ?? "")" />
                </div>

                <div class="col-md-3 d-flex align-items-end gap-2">
                    <button class="btn btn-primary" type="submit">Apply</button>
                    <a class="btn btn-outline-secondary" asp-action="Index">Reset</a>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-body p-2 rounded-4 shadow-sm">
        <div class="row mb-3">
            <div class="col-md-4"><strong>Total income:</strong> @Model.TotalIncome.ToString("F2")</div>
            <div class="col-md-4"><strong>Total expense:</strong> @Model.TotalExpense.ToString("F2")</div>
            <div class="col-md-4"><strong>Balance:</strong> @Model.Balance.ToString("F2")</div>
        </div>

        <table class="table table-striped table-hover align-middle table-sm fs-6">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Amount</th>
                    <th>Type</th>
                    <th>Category</th>
                    <th>Description</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td>@item.Date.ToString("dd.MM.yyyy")</td>
                        <td>@item.Amount.ToString("F2")</td>
                        <td>@item.Type</td>
                        <td>@(item.Category?.Name ?? "-")</td>
                        <td data-bs-toggle="tooltip"
                            data-bs-placement="left"
                            data-bs-title="@item.Description">
                            @(string.IsNullOrEmpty(item.Description)
                                                ? "-"
                                                : item.Description.Length > 8
                                                ? item.Description.Substring(0, 8) + "..."
                                                : item.Description)
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.Id" data-bs-toggle="tooltip" data-bs-title="Detail"><i class="bi bi-info-circle me-2"></i></a>
                            <a asp-action="Edit" asp-route-id="@item.Id" data-bs-toggle="tooltip" data-bs-title="Edit"><i class="bi bi-pencil me-2"></i></a>
                            <a asp-action="Delete" asp-route-id="@item.Id" data-bs-toggle="tooltip" data-bs-title="Delete"><i class="bi bi-trash"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
