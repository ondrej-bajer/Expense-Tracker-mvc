@model IEnumerable<Expense_Tracker_mvc.Models.TransactionCategory>

@{
    ViewData["Title"] = "Index";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-body">

            <h1 class="h5 mb-3"><i class="bi bi-diagram-3"></i> Transaction categories</h1>

            <div class="d-flex gap-2 mb-3">
                <a asp-action="Create" class="btn btn-primary">
                    Create New
                </a>

                <a asp-controller="Settings"
                   asp-action="Index"
                   class="btn btn-outline-secondary">
                    Back to Settings
                </a>
            </div>

            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.IsActive)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.CreatedAt)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.IsActive)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CreatedAt)
                                </td>
                                <td>
                                    <a asp-action="Details" asp-route-id="@item.Id" data-bs-toggle="tooltip" data-bs-title="Detail"><i class="bi bi-info-circle me-2"></i></a>
                                    <a asp-action="Edit" asp-route-id="@item.Id" data-bs-toggle="tooltip" data-bs-title="Edit"><i class="bi bi-pencil me-2"></i></a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" data-bs-toggle="tooltip" data-bs-title="Delete"><i class="bi bi-trash"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>
